<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_area"
    android:paddingTop="20dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_appbulter"
        android:layout_width="@dimen/image100dp"
        android:layout_height="@dimen/image100dp"
        android:gravity="center"
        android:background="@drawable/main_appstore"/>

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="@string/main_appmall"
        android:textColor="#21BFD4"
        android:textSize="@dimen/text28sp" />

</LinearLayout>