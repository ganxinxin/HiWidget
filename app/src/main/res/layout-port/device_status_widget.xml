<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_area"
    android:padding="40dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lin_dev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dev"
            android:layout_width="@dimen/image120dp"
            android:layout_height="@dimen/image120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_para" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/main_devPerf"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text28sp" />

        <ImageView
            android:id="@+id/tv_device"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_net"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_net"
            android:layout_width="@dimen/image120dp"
            android:layout_height="@dimen/image120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_net" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/main_network"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text28sp" />

        <ImageView
            android:id="@+id/tv_network"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_exDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_sd"
            android:layout_width="@dimen/image120dp"
            android:layout_height="@dimen/image120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_sd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/main_stor"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text28sp" />

        <ImageView
            android:id="@+id/tv_sd"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_printer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_printer"
            android:layout_width="@dimen/image120dp"
            android:layout_height="@dimen/image120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_printer" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/main_printer"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text28sp" />
        <ImageView
            android:id="@+id/tv_printer"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_mem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mem"
            android:layout_width="@dimen/image120dp"
            android:layout_height="@dimen/image120dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_mem" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/main_mem"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text28sp" />

        <ImageView
            android:id="@+id/tv_mem"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>