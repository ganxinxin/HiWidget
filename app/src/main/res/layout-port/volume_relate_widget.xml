<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_area"
    android:paddingHorizontal="32dp"
    android:paddingVertical="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="69dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/volume" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/lin_volsubtract"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/subtract"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/lin_voladd"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/add"
                    android:gravity="center"/>
            </LinearLayout>

            <ProgressBar style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/volbar"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:progress="0"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lin_volsilent"
                android:layout_width="@dimen/image100dp"
                android:layout_height="@dimen/image100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/silent"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="静音"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text28sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="69dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/lin_lightsubtract"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/subtract"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/lin_lightadd"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/add"
                    android:gravity="center"/>
            </LinearLayout>

            <ProgressBar style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/lightbar"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:progress="0"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_marginLeft="32dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lin_lock"
                android:layout_width="@dimen/image100dp"
                android:layout_height="@dimen/image100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/lock"
                android:gravity="center"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="锁屏"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text28sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout >