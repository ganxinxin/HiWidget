<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg_area"
android:padding="40dp"
android:gravity="center"
android:orientation="horizontal">

<ImageView
    android:id="@+id/img_error"
    android:layout_width="@dimen/image100dp"
    android:layout_height="@dimen/image100dp"
    android:gravity="center"
    android:background="@drawable/main_remote"/>

<TextView
    android:id="@+id/tv_falutfresh"
    android:layout_width="194dp"
    android:layout_height="100dp"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:text="@string/tro_remote"
    android:textColor="#21BFD4"
    android:textSize="@dimen/text32sp" />


</LinearLayout>